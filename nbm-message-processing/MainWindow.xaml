<Window x:Class="nbm_message_processing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nbm_message_processing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Message Header:" Margin="0,10,0,5"/>
            <TextBox x:Name="MessageHeaderTextBox" Text="Enter a message header here"/>
            
            <TextBlock Text="Message Text:" Margin="0,10,0,5"/>
            <TextBox x:Name="MessageTextTextBox" Text="Enter the message text here" Margin="0,10,0,10"/>
            
            <TextBlock Text="Message Output:" Margin="0,10,0,5"/>
            <TextBox x:Name="MessageOutputTextBox" IsReadOnly="True" Margin="0,10,0,10" />
            
            <Button Content="Submit" Click="SubmitButton_Click"/>
            <Button Content="End Session" Click="EndSessionButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
